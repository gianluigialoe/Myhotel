@model Myhotel.Models.Cliente



@{
    ViewBag.Title = "Aggiungi Cliente";
}

<h2>Aggiungi Cliente</h2>

@using (Html.BeginForm("AddCliente", "BackOffice", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CodiceFiscale, new { @class = "col-md-2 control-label" })
